root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 2

[*.hbs]
indent_style = space
indent_size = 2
insert_final_newline = false

[*.md]
indent_style = tab
indent_size = 2
insert_final_newline = false

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
